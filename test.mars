
let path = './hello.txt'
let file

if fs.exists(path) {
	file = fs.open(path)
} else {
	file = fs.create(path)
}

file.writeline("Hello World!")

let content = file.read()

if size(content) >= 100 { file.wipe() }

writeline(content)
writeline(size(content))
writeline(file.path)

let file2 = fs.open(file.path)

writeline(file2.read())
