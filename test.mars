
attr Complex {

	static new = function(real, imag) => {
		real, imag
		:: Complex
	}

	add(other) => {
		real = self.real + other.real
		imag = self.imag + other.imag
		:: Complex
	}

	to_string() {
		if self.imag < 0 {
			return '#{self.real} - #{-self.imag}i'
		} else {
			return '#{self.real} + #{self.imag}i'
		}
	}

}

let c1 = Complex.new(2, 3)

let c2 = Complex.new(8, 4)

writeline(c1 + c2)
