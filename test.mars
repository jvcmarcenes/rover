
let person = function (name, age) {
	let p = {
		name,
		age,

		get_older = function () {
			self.age += 1
		},

		to_string = function () {
			return '#{self.name} is #{self.age} yo.'
		}
	}
	return p
}

let john = person('John', 23)
writeline(john.to_string())
john.get_older()
