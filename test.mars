
#!infer

type person = {
	name: string
	age: number
}

type student = {
	courses: [string]
	grades: [number]
}

type teacher = {
	classes: [string]
}

type user = person and (student or teacher)

let bob: user = {
	name = "bob"
	age = 16
	courses = []
	grades = []
}

let mike: user = {
	name = "mike"
	age = 31
	classes = []
}
